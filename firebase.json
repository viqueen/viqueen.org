{
  "hosting": {
    "public": "output/site/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "output/templates",
      "assets",
      "package.json",
      "package-lock.json",
      "yarn.lock",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
